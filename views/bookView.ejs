<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Book</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <% if (locals.books) { %>
        <% books.forEach((ele, i) => { %>
            <div class="container mt-5">
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-md p-4 text-center bg-dark">
                            <h2 class="fw-bold text-success"><%- ele.title %></h2>
                            <!-- <p class="mb-1 text-success">Author: <span class="fw-semibold"><%- ele.authors %></span></p> -->
                            <p class="text-success">Genre: <span class="fw-semibold"><%- ele.genre %></span></p>
                            <a href="/public/ <%= encodeURIComponent(ele.link) %>" target="_blank" class="btn btn-primary mt-3">Go to Book</a>
                        </div>
                    </div>
                </div>
            </div>    
        <% }) %>
     
    <% } %>
    <%- include('./partials/script') %>  
</body>
</html>