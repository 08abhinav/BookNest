<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Author Profile</title>
</head>
<body>
    <%- include('./partials/nav')%>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-body text-center bg-dark">
                        <% data.forEach((ele, i) => { %>
                            <h2 class="card-title text-light"><%- ele.authorName %></h2>
                            <p class="text-muted text-light">Nationality: <strong><%- ele.nationality %></strong></p>
                            <p class="card-text text-light">
                                <%- ele.bio %>
                            </p>
                            <div class="mt-3">
                                <a href="#" class="btn btn-primary mx-1">Twitter</a>
                                <a href="#" class="btn btn-danger mx-1">Instagram</a>
                                <a href="#" class="btn btn-warning mx-1">LinkedIn</a>
                                <a href="#" class="btn btn-secondary mx-1">Website</a>
                            </div>
    
                            <div class="container mt-5">
                                <a href="/authorProfile" class="btn btn-outline-info">Update Profile</a>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/script')%>
</body>
</html>